// Executor and queue settings
process.executor = 'pbspro'
process.queueSize = 49
process.clusterOptions = { "-l select=1:ncpus=${task.cpus}:mem=${task.memory.toMega()}mb -l walltime=${task.time.toHours()}:00:00" }

// Process resource classes
process {

    withLabel:process_tiny {
        cpus   = { 2 * task.attempt }
        memory = { 8.GB * task.attempt }
        time   = { 1.h * task.attempt }
    }

    withLabel:process_low {
        cpus   = { 4 * task.attempt }
        memory = { 48.GB * task.attempt }
        time   = { 4.h * task.attempt }
    }

    withLabel:process_medium {
        cpus   = { 8 * task.attempt }
        memory = { 96.GB * task.attempt }
        time   = { 8.h * task.attempt }
    }

    withLabel:process_high {
        cpus   = { 32 * task.attempt }
        memory = { 256.GB * task.attempt * params.memory_scale }
        time   = { 24.h * task.attempt }
    }

    withLabel:process_high_memory {
        cpus   = { 64 * task.attempt }
        memory = { 500.GB * task.attempt }
        time   = { 24.h * task.attempt }
    }

    withLabel:process_long {
        cpus   = { 8 * task.attempt }
        memory = { 96.GB * task.attempt }
        time   = { 24.h * task.attempt }
    }

    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }

    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }

    // Include critical memory-intensive processes explicitly
    withName: '.*:CELLBENDER_.*|SCVITOOLS_SCVI|.*:ADATA_UNIFY' {
        label = 'process_high_memory'
        errorStrategy = 'retry'
        maxRetries = 3
    }
}

// Container engine settings
singularity {
    enabled = true
    cacheDir = "/rds/general/user/pr422/ephemeral/singularity_cache"
    pullTimeout = '120m'
}

apptainer {
    cacheDir = "/rds/general/user/pr422/ephemeral/singularity_cache"
}

// Nextflow working directory (scratch)
workDir = '/rds/general/user/${USER}/ephemeral/NEXTFLOW/'

// Output report
report {
    enabled = true
    file = "/rds/general/user/pr422/projects/puklandmarkproject/ephemeral/Parisa_scdownstream/scdown_old_samples/output/celltypist/scdownstream.html"
    overwrite = true
}